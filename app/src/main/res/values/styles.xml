<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SubHeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/subheader_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CaptionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:textColor">@color/subHeader</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BodyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/subHeader</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ErrorStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>



</resources>